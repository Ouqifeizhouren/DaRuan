<Page x:Class="VirtualParty.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VirtualParty"
      mc:Ignorable="d" 
      d:DesignHeight="584.76" d:DesignWidth="900"
      Title="Welcome">

    <Grid Background="Transparent">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Image Grid.Column="0" Source="../img/party.png" Width="100" Height="100" VerticalAlignment="Center" HorizontalAlignment="Right" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <ScaleTransform ScaleX="-1"/>
            </Image.RenderTransform>
        </Image>
        <Border Background="Black" Width="260" Height="130" Grid.Column="1">
            <Label Name="topic" Content="创建房间成功，&#10;等待客人加入吧！" FontSize="30" Width="255" Height="125" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="White"/>
        </Border>
        <Image Grid.Column="2" Source="../img/party.png" Width="100" Height="100" VerticalAlignment="Center" HorizontalAlignment="Left"/>
    </Grid>
</Page>
